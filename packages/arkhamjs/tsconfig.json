{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "inlineSourceMap": false,
    "jsx": "react-jsx",
    "lib": [
      "esnext",
      "dom"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "pretty": false,
    "skipLibCheck": true,
    "importHelpers": false,
    "isolatedModules": true,
    "target": "esnext",
    "paths": {
      "@nlabs/utils/*": [
        "../../../utils/lib/*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "**/*.test.*",
    "lib",
    "./node_modules",
    "./test"
  ]
}